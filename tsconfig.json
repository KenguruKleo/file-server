{
  "$schema": "http://json.schemastore.org/tsconfig",
  "compilerOptions": {
	"module": "commonjs",
	"esModuleInterop": true,
	"target": "es2017",
	"noImplicitAny": true,
	"moduleResolution": "node",
	"sourceMap": true,
	"outDir": "dist",
	"rootDir": "src",
	"baseUrl": ".",
	"paths": {
	  "*": [
		"node_modules/*",
		"src/types/*"
	  ]
	},
	"emitDecoratorMetadata": true,
	"experimentalDecorators": true,
	"resolveJsonModule": true,
	"skipLibCheck": true,
	"strict": true,
	"lib": ["es2018", "esnext.asynciterable"],
	"declaration": true
  },
  "include": ["src"]
}
